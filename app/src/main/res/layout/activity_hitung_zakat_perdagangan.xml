<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.izzatul.bismillahzakatmvvm.kalkulator.HitungZakatPerdaganganActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/zakatdagang"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Haul Zakat -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lama Kepemilikan (tahun)"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/etHaul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:hint="Lama Kepemilikan (tahun)"
                    android:inputType="number"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnResetHaul"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_dialog" />
            </LinearLayout>

            <!-- Harga Emas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga Emas (gram)"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/etHargaEmas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:hint="Harga Emas (gram)"
                    android:inputType="number"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnResetHargaEmas"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_dialog" />
            </LinearLayout>

            <!-- Modal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modal yang Diputar"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/etModal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:hint="Modal yang Diputar"
                    android:inputType="number"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnResetModal"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_dialog" />
            </LinearLayout>

            <!-- Keuntungan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keuntungan"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/etKeuntungan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:hint="Keuntungan"
                    android:inputType="number"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnResetKeuntungan"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_dialog" />

            </LinearLayout>

            <!-- Piutang -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Piutang yang dapat Dicairkan"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/etPiutang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:hint="Piutang"
                    android:inputType="number"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnResetPiutang"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_dialog" />

            </LinearLayout>

            <!-- Hutang -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hutang"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/etHutang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:hint="Hutang"
                    android:inputType="number"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnResetHutang"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_dialog" />

            </LinearLayout>

            <!-- Kerugian -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kerugian"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/etKerugian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:hint="Keuntungan"
                    android:inputType="number"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btnResetKerugian"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_dialog" />

            </LinearLayout>

            <!-- Hasil perhitungan -->
            <TextView
                android:id="@+id/tvHasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="Hasil perhitungan"
                android:paddingBottom="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <!-- Button perhitungan dan reset all -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/btnHitung"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="@string/hitung"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnUlangi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:gravity="center"
                    android:text="@string/ulang"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
